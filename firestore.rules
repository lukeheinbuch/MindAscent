rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Username reservations - allow read for checking availability
    // Only allow create/delete by authenticated users for their own uid
    match /usernames/{username} {
      allow read: if true;
      allow create, delete: if request.auth != null
        && request.resource.data.uid == request.auth.uid;
      allow update: if false; // Usernames cannot be updated once created
    }

    // User profiles - only accessible by the user who owns them
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Check-ins - only accessible by the user who owns them
    match /users/{uid}/checkins/{checkinId} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Any other collections under users should follow the same pattern
    match /users/{uid}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }
  }
}
